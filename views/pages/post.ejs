                    <div class="post-content">
                        <img src="<%= post.images[0] %>" alt="post-image" class="img-responsive post-image" />
                        <div class="post-container">
                            <img src="<%= post.owner.avatar %>" alt="user" class="profile-photo-md pull-left" />
                            <div class="post-detail">
                                <div class="user-info">
                                    <h5><a href="<%= post.owner.account %>"
                                            class="profile-link"><%= post.owner.name.first %>
                                            <%= post.owner.name.last %></a> <span class="following">following</span>
                                    </h5>
                                    <p class="text-muted"><%= timePost %></p>
                                </div>
                                <div class="reaction">
                                    <input type="hidden" value="<%= post._id %>">
                                    <a class="btn text-green" onclick="like(this)"><i
                                            class="icon ion-thumbsup"><%= post.meta.like.length %></i>
                                    </a>
                                    <a class="btn text-red" onclick="dislike(this)"><i
                                            class="fa fa-thumbs-down"><%= post.meta.dislike.length %></i>
                                    </a>
                                    <!-- <button class="btn-md" onclick="loadComments(this)">Comments</button> -->
                                </div>

